<%= form_for @wigi_wiki, :url => { :controller => 'wigi_wikis', :action=> 'update', :project_id => @project } do |f| %>

<div class="box tabular">
  <p>
    <%= label(:wigi_wiki, :git_path) %>
    <%= f.text_field :git_path %>
  </p>
  <p>
    <%= label(:wigi_wiki, :branch) %>
    <%=  f.text_field :branch  %>
  </p>
  <p>
    <%= label(:wigi_wiki, :ext) %>
    <%=  f.text_field :ext  %>
  </p>
  <p>
    <%= label(:wigi_wiki, :default_page) %>
    <%= f.text_field :default_page %>
  </p>
  <p>
    <%= label(:wigi_wiki, :page_files_directory) %>
    <%= f.text_field :directory %>
  </p>
  <p>
    <%= label(:wigi_wiki, :is_fs) %>
    <%=  f.check_box :is_fs  %>
  </p>
  <p>
    <%= label(:wigi_wiki, :is_bare) %>
    <%=  f.check_box :is_bare  %>
  </p>
</div>

  <p><%= f.submit %></p>
<% end %>
